<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Signin</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <form class="form-signin">

                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", require: true %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", require:true %><br>
                <button class="btn btn-lg btn-primary btn-block" type="submit" id="sign_btn">
                    Sign in</button>
                <a class="pull-right need-help" href="/users/password/new" id="forget_password"><span>Forgot your password?</span></a><br>
                <a href="/users/sign_in" class="pull-right need-help" id="new_sign_id">Signup</a><span class="clearfix"></span>
                </form>
            </div>
        </div>
    </div>
</div>
<% end %>
 